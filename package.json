{
  "name": "simple-server",
  "version": "1.0.0",
  "description": "Minimal Express server",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "npm install --production=false && node --check src/index.js",
    "start": "node src/index.js",
    "dev": "nodemon --watch src --exec \"node src/index.js\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
